# Redis Memory Central Configuration

# API Keys (Required)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Network Configuration
REDIS_MEMORY_IP=10.10.20.85
REDIS_MEMORY_SUBNET=10.10.20.0/24

# Proxmox Configuration
PROXMOX_API_URL=https://proxmox.local:8006/api2/json
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your-password
PROXMOX_NODE=pve
LXC_ID=850

# Service Configuration
DISABLE_AUTH=true  # Set to false for production
GENERATION_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
WINDOW_SIZE=20

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/backups/redis-memory